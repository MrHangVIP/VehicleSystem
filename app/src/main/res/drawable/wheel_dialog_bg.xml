<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#cccccc" />
        </shape>
    </item>

    <item
        android:bottom="5dp"
        android:top="5dp">
        <shape android:shape="rectangle">

            <!-- 竖条背景色   渐变 -->
            <gradient
                android:angle="90"
                android:centerColor="#fafafa"
                android:endColor="#cacaca"
                android:startColor="#cacaca" />
            <!-- 竖条边框色 -->
            <!--<stroke-->
            <!--android:width="1dp"-->
            <!--android:color="#0aaa" />-->
        </shape>
    </item>
</layer-list>