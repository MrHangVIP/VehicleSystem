<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:background="#F1F1F1">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">

            <com.lhj.vehiclesystem.ui.widget.CircleImageView
                android:id="@+id/ivrl_civ_head"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/icon_default_head" />

            <TextView
                android:id="@+id/ivrl_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/ivrl_civ_head"
                android:text="宋智航"
                android:textColor="#333"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/ivrl_tv_publishtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:text="发布时间：2018-04-16"
                android:textColor="#777"
                android:textSize="15sp" />


            <LinearLayout
                android:id="@+id/ivrl_ll_vehicle_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivrl_civ_head"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivrl_iv_image"
                        android:layout_width="80dp"
                        android:layout_height="120dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_indexpic" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/ivrl_tv_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="保时捷"
                        android:textColor="#333333"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/ivrl_tv_duration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="right"
                        android:text="准驾等级:C1"
                        android:textColor="#333333"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/ivrl_tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="50-200 元"
                        android:textColor="@color/theme_color"
                        android:textSize="18sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginTop="10dp"
                        android:background="#A7A5A5" />

                    <TextView
                        android:id="@+id/ivrl_tv_biref"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="2003年，2008年两度来华一票难求！ 万人空巷！阔别十年 再度来袭"
                        android:textColor="#A7A5A5"
                        android:textSize="11sp" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/ivrl_tv_reason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivrl_ll_vehicle_layout"
                android:layout_marginTop="10dp"
                android:text="用途：家庭游玩"
                android:textColor="#333"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/ivrl_ll_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivrl_tv_reason"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ivrl_tv_startTime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1.0"
                    android:text="开始时间:2018-04-16"
                    android:textColor="#333"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/ivrl_tv_finishtime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1.0"
                    android:gravity="right"
                    android:text="结束时间:2018-04-16"
                    android:textColor="#333"
                    android:textSize="14sp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/img_state"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_above="@+id/ivrl_ll_bottom"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:src="@drawable/state_use" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</FrameLayout>