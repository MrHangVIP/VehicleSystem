<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/xlistview_header_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="bottom"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/xlistview_header_adimage"
        android:layout_width="match_parent"
        android:layout_height="80dip"
        android:visibility="gone"
        android:scaleType="fitXY"/>

    <RelativeLayout
        android:id="@+id/xlistview_header_content"
        android:layout_width="match_parent"
        android:layout_height="80dp" >
        <!--<com.hoge.android.factory.views.CircleRotateImageView
            android:id="@+id/xlistview_header_arrow"
            android:layout_width="20dip"
            android:src="@drawable/mxu_refreshheader_icon"
            android:layout_height="20dip"/>-->
        <ImageView
            android:id="@+id/xlistview_header_arrow"
            android:layout_width="20dip"
            android:layout_height="20dip"/>
        <ImageView
            android:id="@+id/xlistview_header_bg"
            android:layout_width="fill_parent"
            android:layout_marginTop="40dip"
            android:src="@drawable/mxu_refreshheader_bg"
            android:layout_height="fill_parent"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/xlistview_header_extra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="vertical" >
    </RelativeLayout>

</LinearLayout>